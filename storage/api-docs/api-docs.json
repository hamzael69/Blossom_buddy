                "summary": "Récupérer une plante par son nom",
                "operationId": "7689b9b14a12aa70fcbe135e7f73bc32",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Nom commun de la plante",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Ficus"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Informations de la plante",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "common_name": {
                                            "type": "string",
                                            "example": "Ficus"
                                        },
                                        "watering_general_benchmark": {
                                            "type": "object"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Plante non trouvée",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Plante non trouvée"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/plant/{id}": {
            "delete": {
                "tags": [
                    "Plants"
                ],
                "summary": "Supprimer une plante",
                "operationId": "533f3fb60e61315d56125d3e1efeb83b",
